@using GDirectiva.Presentacion.Resource.Base
@using GDirectiva.Presentacion.Resource.General
@using GDirectiva.Presentacion.Core.Helpers
@model GDirectiva.Presentacion.Core.ViewModel.General.ReportePlanAsignaturaBusquedaModel
@{
    ViewBag.Title = "Cronograma Plan Asignatura";
}
<div class="content-body">
    <div class="main-colum">
        <form id="frmReportePlanAsignaturaBusqueda" action="@Url.Action("General", "ReportePlanAsignatura")">
            <!-- wrap -->
            <div class="box-wrap-main">
                <div class="box-wrap-header">
                    <div class="pull-left">
                        <div class="title-main">
                            REPORTE DE CUMPLIMIENTO DE PLAN DE ASIGNATURA - BÚSQUEDA
                        </div>
                    </div>
                </div>
                <div class="box-wrap-body">
                    <h3 class="title-form">FILTROS DE BÚSQUEDA</h3>
                    <div class="box-form">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaPeriodoAcademico:</label>
                                    <select id="slcPeriodoAcademico" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                        @{
                                            if (Model.ListaPeriodoAcademico != null)
                                            {
                                                foreach (var item in Model.ListaPeriodoAcademico)
                                                {
                                                    <option value="@item.ID_PERIODOACADEMICO">@item.PERIODO</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaPlanArea:</label>
                                    <select id="slcPlanArea" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaAsignatura:</label>
                                    <select id="slcAsignatura" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-acciones">
                        <div class="pull-right">
                            <button type="button" id="btnBuscar" class="btn-s btn-search">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- cierra wrap -->
        </form>
    </div>
    <div id="divGrdResult">
    </div>

</div>
@section scripts
{
    <script type="text/javascript">

    ns('GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions')
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.Buscar = '@Url.Action("Buscar", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.BuscarActividades = '@Url.Action("BuscarActividades", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.ReporteCumplimiento = '@Url.Action("ReporteCumplimiento", "ReportePlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.BuscarPlanArea = '@Url.Action("BuscarPlanArea", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.BuscarAsignatura = '@Url.Action("BuscarAsignatura", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.BuscarDocente = '@Url.Action("BuscarDocente", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.ListarEmpleado = '@Url.Action("ListarEmpleado", "PlanAsignaturaCronograma", new { Area = "General" })';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Actions.ListarMeta = '@Url.Action("ListarMeta", "PlanAsignaturaCronograma", new { Area = "General" })';


    ns('GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource')
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaTituloFormulario = '@ReporteCumplimientoResource.EtiquetaTituloFormulario';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaPeriodoAcademico = '@ReporteCumplimientoResource.EtiquetaPeriodoAcademico';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaPlanArea = '@ReporteCumplimientoResource.EtiquetaPlanArea';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaAsignatura = '@ReporteCumplimientoResource.EtiquetaAsignatura';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaMeta = '@ReporteCumplimientoResource.EtiquetaMetas';
    GDirectiva.Presentacion.General.ReportePlanAsignatura.Resource.EtiquetaMetodologias = '@ReporteCumplimientoResource.EtiquetaMetodologias';
</script>
    @CustomHtmlHelper.RenderViewJs("generalreporteplanasignaturareportecumplimiento")
}